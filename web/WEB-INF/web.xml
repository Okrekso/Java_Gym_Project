<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <jsp-file>/Index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dbCreation</servlet-name>
        <jsp-file>/DBCreation.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>dbCreation</servlet-name>
        <url-pattern>/db-create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dbCreationSubmit</servlet-name>
        <servlet-class>servlets.DBCreationSubmitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dbCreationSubmit</servlet-name>
        <url-pattern>/db-create/submit</url-pattern>
    </servlet-mapping>
</web-app>